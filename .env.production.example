# Production Environment Variables
# Copy this file to .env.production and update the values

# Your production domain (include protocol)
ORIGIN=https://yourdomain.com

# Database (SQLite file path - will be stored in Docker volume)
DATABASE_URL=file:/app/data/prod.db
AUTH_SECRET="your-secret-key-change-this-in-production"

# Node environment
NODE_ENV=production

# Application port (default: 3420)
PORT=3420

# Admin user email (this user will have admin access)
ADMIN_EMAIL=admin@yourdomain.com
